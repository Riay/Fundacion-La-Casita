extends layout
block content
  section.Admin(style="padding-bottom: 180px;")
    .swiper-container.Admin
      .container
        link(rel='stylesheet prefetch', href='https://maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css')
        .mail-box
          aside.sm-side
            .user-head
              a.inbox-avatar(href='javascript:;')
                img(width='64', hieght='60', src='img/c2.png')
              .user-name
                h5
                  a(href='#') Admin Name
                span
                  a(href='#') Info.Ali.Pci@Gmail.com
            .inbox-body
              a.btn.btn-compose(href='/Login', title='Actualizar')
                | Salir
            ul.inbox-nav.inbox-divider
              li.active
                a( href='/Admin')
                  i.fa.fa-inbox
                  |  Citas Pendientes
                  span.label.label-danger.pull-right 
              li
                a( href='/Completed')
                  i.fa.fa-check-square-o
                  |  Completadas
              //- li
              //-   a( href='/Trash')
              //-     i.fa.fa-trash-o
              //-     |  Trash
            .inbox-body.text-center
              .btn-group
                a.btn.mini.btn-success.send_message(href="whatsapp://send?text=Hola")
                  i.fa.fa-phone
          aside.lg-side
            .inbox-head
              h3 Inbox
            .inbox-body
              .mail-option
                .btn-group
                  a.btn.mini.tooltips(data-original-title='Refresh', data-placement='top', data-toggle='dropdown', href='#', onclick="window.location.reload()")
                    i.fa.fa-refresh
              table.table.table-inbox.table-hover
                each quote in quotes
                  tbody
                    tr.unread
                      td.inbox-small-cells
                        a(href="#myModal" data-toggle="modal" data-target="#myModal") #{quote.name}
                      td.view-message #{quote.email}
                      td.view-message #{quote.number}
                       a.quote-done.btn.btn-success(href=`/quote/${quote.id}`)
                        i.fa.fa-check-square-o
                      td.view-message.text-right
                  #myModal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='myModalLabel', aria-hidden='true')
                   .modal-dialog
                      .modal-content
                        .modal-header
                          button.close(type='button', data-dismiss='modal', aria-hidden='true') Ã—
                          h4#myModalLabel.modal-title
                            | #{quote.name} 
                            small Yahoo!, President & CEO
                        .modal-body
                           p #{quote.id}
                        .modal-footer
                          button.btn.btn-default(type='button', data-dismiss='modal') Close