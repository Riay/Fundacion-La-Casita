extends layout
block content
  section.Admin
    .swiper-container.Admin
      .container
        link(rel='stylesheet prefetch', href='https://maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css')
        .mail-box
          aside.sm-side
            .user-head
              a.inbox-avatar(href='javascript:;')
                img(width='64', hieght='60', src='img/c2.png')
              .user-name
                h5
                  a(href='#') Admin Name
                span
                  a(href='#') Info.Ali.Pci@Gmail.com
            .inbox-body
              a.btn.btn-compose(href='/Login', title='Actualizar')
                | Salir
            ul.inbox-nav.inbox-divider
              li
                a( href='/Admin')
                  i.fa.fa-inbox
                  |  Citas Pendientes
                  span.label.label-danger.pull-right 2
              li.active
                a( href='/Completed')
                  i.fa.fa-check-square-o
                  |  Completadas
              li
                a( href='/Trash')
                  i.fa.fa-trash-o
                  |  Trash
            .inbox-body.text-center
              .btn-group
                a.btn.mini.btn-success(href='javascript:;')
                  i.fa.fa-phone
          aside.lg-side
            .inbox-head
              h3 Inbox 
            .inbox-body
              .mail-option
                .btn-group
                  a.btn.mini.tooltips(data-original-title='Refresh', data-placement='top', data-toggle='dropdown', href='#')
                    i.fa.fa-refresh
              table.table.table-inbox.table-hover
                each quote in quotes
                  tbody
                    tr.unread
                      td.inbox-small-cells
                        input.mail-checkbox(type='checkbox')
                      td.inbox-small-cells(href='/') #{quote.name}
                      td.view-message #{quote.email}
                       a.quote-quit.btn.btn-primary(href=`/quote/${quote.id}`)
                        i.fa.fa-check-square-o
                       a.quote-deletes.btn.btn-danger(href=`/quote/${quote.id}`)
                        i.fa.fa-trash
                      td.view-message.text-right
