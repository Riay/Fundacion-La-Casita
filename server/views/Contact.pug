    .container.contact
      h2
        | Cu√©ntanos
        small que te parece nuestro trabajo
      .row
        .col-md-4
         form( method='POST', action='/sendMail')
          .form-group
            label(for='exampleName' ) Nombre
            input#exampleName.form-control(name='name',type='text', aria-describedby='emailHelp')
        .col-md-4
          .form-group
            label(for='examplePhone' ) Numero de Telefono
            input#examplePhone.form-control(name='number',type='text', aria-describedby='emailHelp')
